+        return verbose;
+    }
+
+    public static void init(@NotNull File file) {
+        if (file == null) {
+            throw new IllegalArgumentException("File parameter cannot be null");
+        }
+
+        configFile = file;
+        commands = new HashMap<>();
+
+        commands.put("crunchy", new CrunchyCommand());
